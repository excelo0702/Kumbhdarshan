            app:layout_constraintBottom_toTopOf="@+id/imageViewaka"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/aka"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageViewaka"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toTopOf="@+id/textViewaka"
            app:layout_constraintTop_toBottomOf="@+id/imageView2aka"
            app:srcCompat="@drawable/nagas"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textViewaka"

            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:fontFamily="casual"
            android:scrollbars="vertical"
            android:text="\n\n\nAkharas are divided into different camps according to the concept of God they worship. Shaiva Akharas are for followers of Lord Shiva, Vaishnava or Vairagi Akhara are for followers of Lord Vishnu and Kalpwasis are for followers of Lord Brahma An Akhara is further divided into 8 davas (divisions) and 52 marhis (centers). Each Marhi performs its spiritual activities under a Mahant. The central administrative body of the Akhara is Shree Panch (the body of five), representing Brahma, Vishnu, Shiva. Shaktiand and Ganesha."
            android:textColor="#020202"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView2aka"
            app:layout_constraintTop_toBottomOf="@+id/imageViewaka"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView2aka"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="casual"
            android:text="The Akhil Bharatiya Akhara Parishad or ABAP is the apex organisation of Hindu Sadhus and Sants who work for the preservation of Hindu religion and culture,Seen together especially during the Kumbha Mela. Akharas in India literally means a wrestling ring in Hindi and followersof Lord Shiva and Lord Vishnu. Adi Shankaracharya was the founder of seven major Indian Akharas known as Mahanirvani, Niranjani, Juna, Atal, Avahan, Agni and Anand Akhara."
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView3aka"
            app:layout_constraintTop_toBottomOf="@+id/textViewaka"
            app:layout_constraintVertical_bias="0.97"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView3aka"
            android:layout_width="252dp"
            android:layout_height="54dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="cursive"
            android:text="For more info click on"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textColorLink="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@id/textView4aka"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2aka" />

