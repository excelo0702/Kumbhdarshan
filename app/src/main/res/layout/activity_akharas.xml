            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3aka"
            app:layout_constraintTop_toBottomOf="@+id/textView2aka"
            app:srcCompat="@drawable/chr" />

        <TextView
