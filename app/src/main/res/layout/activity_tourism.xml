<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pback"
    tools:context=".tourism">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/button4"
            android:layout_marginTop="199dp"
            android:background="#fff532"
            android:text="Anand Bhavan" />

        <Button
            android:id="@+id/button3"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="211dp"
            android:layout_marginStart="-10dp"
            android:layout_toEndOf="@+id/button2"
            android:background="#fff532"
            android:text="khusro bagh" />

        <Button
            android:id="@+id/button4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="133dp"
            android:layout_marginStart="24dp"
            android:background="#fff532"
            android:text="All Saints Catherdal" />

        <Button
            android:id="@+id/button5"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="52dp"
            android:layout_marginEnd="22dp"
            android:background="#fff532"
            android:text="Explore Allahabad" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="276dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:fontFamily="casual"
            android:text="Tourism"
            android:textAlignment="center"

            android:textColor="#efefef"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>